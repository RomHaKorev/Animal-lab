<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="80dp"
    android:layout_height="150dp"
    android:layout_alignTop="@+id/body"
    android:layout_marginTop="13dp"
    android:layout_alignRight="@id/body"
    android:layout_marginRight="78dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/part_pig_right_arm"
        android:layout_width="80dp"
        android:layout_height="133dp"
        android:src="@drawable/part_pig_right_arm" />

    <ImageView
        android:id="@+id/part_flesh_right_arm"
        android:layout_width="80dp"
        android:layout_height="133dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="78dp"
        android:visibility="invisible"
        android:src="@drawable/part_flesh_right_arm" />
    <ImageView
        android:id="@+id/part_octopus_right_arm"
        android:layout_width="80dp"
        android:layout_height="133dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="78dp"
        android:visibility="invisible"
        android:src="@drawable/part_octopus_right_arm" />
</FrameLayout>