<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="100dp"
    android:layout_height="90dp"
    android:layout_alignBottom="@+id/body"
    android:layout_alignLeft="@id/body"
    android:layout_marginBottom="-50dp"
    android:layout_marginLeft="63dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/part_pig_left_foot"
        android:src="@drawable/part_pig_left_foot"
        android:layout_width="77dp"
        android:layout_marginTop="10dp"
        android:layout_height="75dp" />
    <ImageView
        android:id="@+id/part_insect_left_foot"
        android:src="@drawable/part_insect_left_foot"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="-5dp"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/part_octopus_left_foot"
        android:src="@drawable/part_octopus_left_foot"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:visibility="invisible"
        />
</FrameLayout>


