<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="30dp"
    android:layout_height="24dp"
    android:layout_alignTop="@+id/head"
    android:layout_alignLeft="@+id/head"
    android:layout_marginTop="34dp"
    android:layout_marginLeft="70dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_pig_left_eye"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:src="@drawable/part_pig_left_eye" />
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_octopus_left_eye"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:src="@drawable/part_octopus_left_eye" />
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_misc_left_eye_drug"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:src="@drawable/part_misc_left_eye_drug" />
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_misc_left_eye_drug_red"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:src="@drawable/part_misc_left_eye_drug_red" />
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_misc_left_eye_hole"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:src="@drawable/part_misc_left_eye_hole" />
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/part_misc_left_eye_snake"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:src="@drawable/part_misc_left_eye_snake" />
    <ImageView
        android:id="@+id/left_eyelid"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:src="@drawable/part_pig_left_eyelid" />
</FrameLayout>