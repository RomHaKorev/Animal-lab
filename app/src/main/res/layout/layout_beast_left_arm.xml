<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="112dp"
    android:layout_height="150dp"
    android:layout_alignTop="@+id/body"
    android:layout_alignLeft="@id/body"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="63dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/part_pig_left_arm"
        android:layout_width="112dp"
        android:layout_height="137dp"
        android:src="@drawable/part_pig_left_arm" />
    <ImageView
        android:id="@+id/part_crab_left_arm"
        android:layout_width="112dp"
        android:layout_height="137dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/part_crab_left_arm"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/part_octopus_left_arm"
        android:layout_width="112dp"
        android:layout_height="137dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/part_octopus_left_arm"
        android:visibility="invisible"/>
</FrameLayout>